{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@vpp/types": ["packages/types/dist"],
        "@vpp/cdk": ["packages/cdk-constructs/dist"],
        "@vpp/*": ["packages/*/dist"]
      }
    },
    "exclude": ["node_modules"]
  }
  